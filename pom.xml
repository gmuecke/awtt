<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>li.moskito</groupId>
	<artifactId>awtt</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Assemble with Tinker Toys</name>

	<properties>
	
		<!-- UTF-8 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<skipTests>false</skipTests>

		<!-- Unit and Integrationtesting (coverage) -->
		<coverage.unit.test.path>${project.basedir}/../target/jacoco.exec</coverage.unit.test.path>

		<!-- Sonar -->
		<sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.jacoco.reportPath>${coverage.unit.test.path}</sonar.jacoco.reportPath>
		<sonar.language>java</sonar.language>
		<jacoco.version>0.7.1.201405082137</jacoco.version>

		<!-- Java Technology Versions -->
		<jee.version>6.0</jee.version>
		<javax.jcr.version>2.0</javax.jcr.version><!-- JCR Spec -->
		<javax.json.version>1.0</javax.json.version>
		<javax.json.impl.version>1.0.4</javax.json.impl.version>
		<javax.enterprise.cdi-api.version>1.2</javax.enterprise.cdi-api.version>

		<!-- Common Libraries Versions -->
		<slf4j.version>1.7.6</slf4j.version>
		<log4j.version>2.0-rc1</log4j.version>
		<commons.codec>1.4</commons.codec>
		<commons.configuration.version>1.10</commons.configuration.version>
		<commons.collections>3.2.1</commons.collections>
		
		<xalan.version>2.7.1</xalan.version>
		<commons.lang.version>2.2</commons.lang.version>
		<commons.httpclient.version>3.1</commons.httpclient.version>
		<commons.jxpath.version>1.3</commons.jxpath.version>
		<commons.io.version>2.4</commons.io.version>
	    
	    <deltaspike.version>0.7</deltaspike.version>

		<!-- Test Dependency Versions -->
		<junit.version>4.11</junit.version>
		<mockito.version>1.9.5</mockito.version>

	</properties>
	
	<!-- Unit and Integrationtesting (coverage) -->
	<dependencies>
		<dependency>
			<groupId>org.jacoco</groupId>
			<artifactId>jacoco-maven-plugin</artifactId>
			<version>${jacoco.version}</version>
			<scope>provided</scope>
			<exclusions>
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<plugins>	
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<compilerVersion>1.7</compilerVersion>
				</configuration>
			</plugin>
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-surefire-plugin</artifactId>
			    <version>2.17</version>
			    <configuration>
	    	        <forkCount>1</forkCount>
	    	        <reuseForks>false</reuseForks>
	    	        <runOrder>random</runOrder>
	    	        <enableAssertions>true</enableAssertions>
	    	        <argLine>-Xms32m -Xmx512m ${surefireArgLine}</argLine>
			    </configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.version}</version>
				<configuration>
					<skip>${skipTests}</skip>
					<includes>
						<include>li.moskito.*</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
						<configuration>
							<destFile>${coverage.unit.test.path}</destFile>
							<append>true</append>
							<propertyName>surefireArgLine</propertyName>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
		        <groupId>org.codehaus.mojo</groupId>
		        <artifactId>sonar-maven-plugin</artifactId>
		        <version>2.4</version>
		    </plugin>
		</plugins>
	</build>

	<modules>
		<module>awtt-server</module>
	</modules>
</project>